<h1>Listing transaction_items</h1>

<table>
  <tr>
    <th>Goods item</th>
    <th>Transaction record</th>
    <th>Name</th>
    <th>Measure</th>
    <th>Quantity</th>
    <th>Unit price</th>
    <th>Full price</th>
    <th>Remark</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transaction_items.each do |transaction_item| %>
  <tr>
    <td><%= transaction_item.goods_item_id %></td>
    <td><%= transaction_item.transaction_record_id %></td>
    <td><%= transaction_item.name %></td>
    <td><%= transaction_item.measure %></td>
    <td><%= transaction_item.quantity %></td>
    <td><%= transaction_item.unit_price %></td>
    <td><%= transaction_item.full_price %></td>
    <td><%= transaction_item.remark %></td>
    <td><%= transaction_item.active %></td>
    <td><%= link_to 'Show', transaction_item %></td>
    <td><%= link_to 'Edit', edit_transaction_item_path(transaction_item) %></td>
    <td><%= link_to 'Destroy', transaction_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

