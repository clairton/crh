<h3>Listing goods_items</h3>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Active</th>
    <th>Remark</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @goods_items.each do |goods_item| %>
  <tr>
    <td><%= goods_item.code %></td>
    <td><%= goods_item.name %></td>
    <td><%= goods_item.active %></td>
    <td><%= goods_item.remark %></td>
    <td><%= link_to I18n.t(:Show), goods_item %></td>
    <td><%= link_to I18n.t(:Edit), edit_goods_item_path(goods_item) %></td>
    <td><%= link_to I18n.t(:Destroy), goods_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

