<h3>Listando Pessoas</h3>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Nickname</th>
    <th>Birthday</th>
    <th>Code</th>
    <th><%=I18n.t(:remark)%></th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @participant_people.each do |participant_person| %>
  <tr>
    <td><%= participant_person.first_name %></td>
    <td><%= participant_person.last_name %></td>
    <td><%= participant_person.nickname %></td>
    <td><%= participant_person.birthday %></td>
    <td><%= participant_person.code %></td>
    <td><%= participant_person.remark %></td>
    <td><%= participant_person.active %></td>
    <td><%= link_to I18n.t(:Show), participant_person %></td>
    <td><%= link_to I18n.t(:Edit), edit_participant_person_path(participant_person) %></td>
    <td><%= link_to I18n.t(:Destroy), participant_person, :confirm => I18n.t(:are_you_sure?), :method => :delete %></td>
  </tr>
<% end %>
</table>

