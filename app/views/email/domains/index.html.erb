<h1>Listing email_domains</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Remark</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @email_domains.each do |email_domain| %>
  <tr>
    <td><%= email_domain.name %></td>
    <td><%= email_domain.remark %></td>
    <td><%= email_domain.active %></td>
    <td><%= link_to I18n.t(:Show), email_domain %></td>
    <td><%= link_to I18n.t(:Edit), edit_email_domain_path(email_domain) %></td>
    <td><%= link_to I18n.t(:Destroy), email_domain, :confirm => I18n.t(:are_you_sure?), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

