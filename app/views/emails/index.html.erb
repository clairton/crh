<h1>Listing emails</h1>

<table>
  <tr>
    <th>Domain</th>
    <th>Name</th>
    <th>Remark</th>
    <th>Email type</th>
    <th>Person</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td><%= email.domain %></td>
    <td><%= email.name %></td>
    <td><%= email.remark %></td>
    <td><%= email.email_type_id %></td>
    <td><%= email.person_id %></td>
    <td><%= link_to 'Show', email %></td>
    <td><%= link_to 'Edit', edit_email_path(email) %></td>
    <td><%= link_to 'Destroy', email, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

