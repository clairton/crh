<h1>Listing transaction_goods_items</h1>

<table>
  <tr>
    <th>Goods item</th>
    <th>Transaction record</th>
    <th>Name</th>
    <th>Measure</th>
    <th>Quantity</th>
    <th>Unit price</th>
    <th>Full price</th>
    <th><%=I18n.t(:active)%></th>
    <th><%=I18n.t(:remark)%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transaction_goods_items.each do |transaction_goods_item| %>
  <tr>
    <td><%= transaction_goods_item.goods_item %></td>
    <td><%= transaction_goods_item.transaction_record %></td>
    <td><%= transaction_goods_item.name %></td>
    <td><%= transaction_goods_item.measure %></td>
    <td><%= transaction_goods_item.quantity %></td>
    <td><%= transaction_goods_item.unit_price %></td>
    <td><%= transaction_goods_item.full_price %></td>
    <td><%= transaction_goods_item.active %></td>
    <td><%= transaction_goods_item.remark %></td>
    <td><%= link_to I18n.t(:Show), transaction_goods_item %></td>
    <td><%= link_to I18n.t(:Edit), edit_transaction_goods_item_path(transaction_goods_item) %></td>
    <td><%= link_to I18n.t(:Destroy), transaction_goods_item, :confirm => I18n.t(:are_you_sure?), :method => :delete %></td>
  </tr>
<% end %>
</table>

